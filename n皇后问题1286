https://xujcoj.com/home/problem/detail/1286
#include<bits/stdc++.h>
using namespace std;
int a[1000], b[1000], c[1000], d[1000], n, sum=0;
//a存行
//b存列
//c存左下到右上的对角线（行+列的和相同）
//d存右下到左上的对角线（行-列的差相同）
//清零数组

int search(int i) {
    int j;
    for (j = 1; j <= n; j++)
        if (b[j] == 0 && c[i + j] == 0 && d[i - j + n] == 0) {//判断
            a[i] = j;//写进去（第i行第j个） 
            b[j] = 1;//占行 
            c[i + j] = 1; d[i - j + n] = 1;//占对角线 
            if (i == n)sum++;//满足条件输出 
            else search(i + 1);//继续推 
            b[j] = 0; c[i + j] = 0; d[i - j + n] = 0;//回溯
        }
    return 0;
}
int main() {
    cin >> n;
    search(1);
    cout << sum << endl;
    return 0;
}
